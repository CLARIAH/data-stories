<?xml version="1.0" encoding="UTF-8"?>
<grammar 
    xmlns:ds="http://example.com/ds/"
    xmlns:dct="http://purl.org/dc/terms/"
    xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
    <start>
        <ref name="ds.DataStory"/>
    </start>
    
    <define name="ds.DataStory">
        <element name="ds:DataStory">
            <ref name="ds.Metadata"/>
            <ref name="ds.Story"/>
            <optional>
                <ref name="ds.Data"/>
            </optional>
            <optional>
                <attribute name="xml:lang">
                    <data type="language"/>
                </attribute>
            </optional>
        </element>
    </define>
    
    <define name="ds.Metadata">
        <element name="ds:Metadata">
            <!-- TODO: @href, @mime -->
            <choice>
                <text/>
                <interleave>
                    <zeroOrMore>
                        <element name="dct:abstract">
                            <data type="string"/>
                        </element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:accessRights"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:accrualMethod"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:accrualPeriodicity"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:accrualPolicy"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:alternative"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:audience"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:available"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:bibliographicCitation"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:conformsTo"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:contributor"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:coverage"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:created"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:creator"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:date"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:dateAccepted"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:dateCopyrighted"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:description"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:educationLevel"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:extent"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:format"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:hasFormat"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:hasPart"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:hasVersion"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:identifier"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:instructionalMethod"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:isFormatOf"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:isPartOf"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:isReferencedBy"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:isReplacedBy"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:isRequiredBy"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:issued"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:isVersionOf"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:language"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:license"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:mediator"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:medium"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:modified"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:provenance"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:publisher"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:references"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:relation"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:replaces"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:requires"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:rights"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:rightsHolder"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:source"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:spatial"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:subject"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:tableOfContents"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:title"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:type"><data type="string"/></element>
                    </zeroOrMore>
                    <zeroOrMore>
                        <element name="dct:valid"><data type="string"/></element>
                    </zeroOrMore>
                    <optional>
                        <element name="ds:LandingPage"><data type="anyURI"/></element>
                    </optional>
                    <optional>
                        <element name="ds:Endpoint"><data type="anyURI"/></element>
                    </optional>
                </interleave>
            </choice>
        </element>
    </define>

    <define name="ds.Story">
        <element name="ds:Story">
            <oneOrMore>
                <ref name="ds.Block"/>
            </oneOrMore>
        </element>
    </define>
    
    <define name="ds.Block">
        <element name="ds:Block">
            <attribute name="xml:id">
                <data type="ID"/>
            </attribute>
            <attribute name="type">
                <choice>
                    <value>text</value>
                    <value>query</value>
                    <value>media</value>
                </choice>
            </attribute>
            <optional>
                <attribute name="mime">
                    <choice>
                        <value>text/plain</value>
                        <value>text/markdown</value>
                        <value>application/xhtml+xml</value>
                        <value>application/sparql-query</value>
                        <value> </value>
                    </choice>
                </attribute>
            </optional>
            <interleave>
                <optional>
                    <ref name="ds.Metadata"/>
                </optional>
                <optional>
                    <ref name="ds.Cues"/>
                </optional>
            </interleave>
            <choice>
                <attribute name="href">
                    <data type="anyURI"/>
                </attribute>
                <text/>
            </choice>
            <text/>
        </element>
    </define>
    
    <define name="ds.Cues">
        <element name="ds:Cues">
            <interleave>
                <optional>
                    <element name="ds:title-prologue">
                        <optional>
                            <ref name="type"/>
                        </optional>
                        <text/>
                    </element>
                </optional>
                <optional>
                    <element name="ds:visualisation">
                        <optional>
                            <ref name="type"/>
                        </optional>
                        <text/>
                    </element>
                </optional>
                <ref name="any"></ref>
            </interleave>
        </element>
    </define>
    
    <define name="type">
        <attribute name="type">
            <choice>
                <value>template</value>
                <value>json</value>
            </choice>
        </attribute>
    </define>
    
    <define name="ds.Data">
        <element name="ds:Data">
            <text/>
        </element>
    </define>
    
    <define name="any">
        <zeroOrMore>
            <element>
                <anyName>
                    <except>
                        <nsName ns="http://example.com/ds/"/>
                    </except>
                </anyName>
                <optional>
                    <attribute name="ds:type">
                        <choice>
                            <value>template</value>
                            <value>json</value>
                        </choice>
                    </attribute>
                </optional>
                <zeroOrMore>
                    <attribute>
                        <anyName>
                            <except>
                                <nsName ns="http://example.com/ds/"/>
                            </except>
                        </anyName>
                    </attribute>
                </zeroOrMore>
                <interleave>
                    <ref name="any"/>
                    <optional>
                        <text/>
                    </optional>
                </interleave>
            </element>
        </zeroOrMore>
    </define>
    
</grammar>